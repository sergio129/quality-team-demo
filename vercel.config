# Este archivo especifica configuraciones específicas para el despliegue en Vercel

# Excluir archivos TypeScript problemáticos
[build]
  excludeFiles = [
    "scripts/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.tsx",
    "**/__tests__/**",
    ".next/types/**"
  ]

# Ignorar errores específicos de tipo durante el build
[build.env]
  NEXT_TYPECHECK = "false"
